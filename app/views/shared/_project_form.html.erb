
<%= form_for (@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :Titre %><br>
  <%= f.text_field :title %><br>
  <br>

  <%= f.label :Image %><br />
  <%= f.file_field :mainpicture %>
  <br>

  <%= f.label :Presentation %><br>
  <%= f.text_area(:presentation, cols: "100", rows: "2") %><br>
  <br>

  <%= f.label :'Objectif - â‚¬' %><br>
  <%= f.number_field :objective %><br>
  <br>

  <%= f.label :'Limite en jours' %><br>
  <%= f.number_field :timelimit %><br>
  <br>

  <%= f.label :'Categorie' %><br>
  <%= f.select :category, ['Art', 'BD', 'Artisanat', 'Danse', 'Design', 'Mode', 'Cinema & video', 'Gastronomie', 'Jeux', 'Journalisme', 'Musique', 'Photographie', 'Edition', 'Technologie', 'Theatre'] %>
  <br>

  <%= f.label :'Description - Markdown' %><br>
  <%= f.text_area(:description, cols: "100", rows: "10") %><br>
  <br>
  
  <%= f.submit %>
<% end %>
