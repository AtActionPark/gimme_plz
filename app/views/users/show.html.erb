<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.picture.url if @user.picture? %>
      <h1>
        <%= @user.name %>
      </h1>
      <p><%= link_to "Edit profile", edit_user_registration_path %></p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.projects.any? %>
      <h3>projects (<%= @user.projects.count %>)</h3>
      <ol class="projects">
        <%= render @projects %>
      </ol>
    <% end %>
  </div>
</div>
