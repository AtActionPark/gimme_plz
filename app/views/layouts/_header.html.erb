<header class="navbar navbar-fixed-top nav">
  <div class="container">
    <%= link_to "Gimme $ plz", root_path, id: "logo" %>
      
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to I18n.t('how_does_it_works'), help_path %></li>
        <li><%= link_to I18n.t('start_a_project'), newProject_path %></li>
        <li><%= link_to I18n.t('explorer'), projects_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to I18n.t('profile'), current_user %></li>
              <li><%= link_to I18n.t('edit_profile'), edit_user_registration_path %></li>
              <% if current_user.admin? %>
                <li><%= link_to I18n.t('admin_users'), users_path %></li>
                <li><%= link_to I18n.t('admin_selection'), selection_path %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to I18n.t('log_out'), destroy_user_session_path, method: "delete" %>
              </li>
              
            </ul>
          </li>
          <li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
        <% else %>
          <li><%= link_to I18n.t('log_in'), new_user_session_path%></li>
        <% end %>
        <li>
          <div class="flag">
            <% if I18n.locale == I18n.default_locale %>
              <%= link_to image_tag("british-flag.png"), :locale=>'en'%>
            <% else %>
              <%= link_to image_tag("flag-french.jpg"), :locale=>'fr'%>
            <%end%>
          </div>
        </li>
      </ul>
    </nav>
  </div>
</header>